<%= form_with model: @post, url: user_posts_path, scope: :post do |form| %>
  <div>
    <%= form.text_field :title, placeholder: 'Post Title', required: true %>
  </div>
  <div>
    <%= form.text_area :text, placeholder: 'Enter your post here...', required: true %>
  </div>
  <div>
    <%= form.submit "Create Post" %>
  </div> 
<% end %>